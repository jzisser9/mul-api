# Simple Database Configuration
# These values match the docker-compose.yml setup for easy deployment

# PostgreSQL Database Connection (matches docker-compose.yml)
DATABASE_HOST=db
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_PORT=5432

# Alternative: Full database URL
DATABASE_URL=postgres://postgres:password@db:5432/mul_api_production

# Rails Configuration
RAILS_ENV=production
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true

# Note: These are simple credentials for public data only.
# For sensitive data, use proper secrets management.